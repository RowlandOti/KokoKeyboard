<resources>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="enforceTextAppearance">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">?android:attr/colorAccent</item>
        <item name="android:textAppearance">@style/Widget.TextAppearance.Button</item>
    </style>


    <style name="Widget.TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">sans-serif/</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.Button.Inverse" parent="Widget.Button">
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="backgroundTint">@android:color/white</item>
    </style>

</resources>
